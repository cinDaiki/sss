{
  "name": "sss-inventory-desktop",
  "version": "1.0.0",
  "private": true,
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder --win nsis"
  },
  "devDependencies": {
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.sss.inventory",
    "productName": "SSS Inventory System",
    "asar": true,
    "files": [
      "**/*"
    ],
    "extraResources": [
      {
        "from": "..",
        "to": "app",
        "filter": [
          "index.html",
          "index.js",
          "add-record.html",
          "login.html",
          "style.css",
          "images/**"
        ]
      }
    ],
    "win": {
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
